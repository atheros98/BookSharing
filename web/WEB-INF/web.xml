<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>HomeController</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>Authenticate</filter-name>
        <filter-class>com.filter.Authenticate</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Authenticate</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBookController</servlet-name>
        <servlet-class>com.controller.SearchBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckBookCover</servlet-name>
        <servlet-class>com.controller.CheckBookCover</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadBookController</servlet-name>
        <servlet-class>com.controller.UploadBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckBookExist</servlet-name>
        <servlet-class>com.controller.CheckBookExist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReviewBookController</servlet-name>
        <servlet-class>com.controller.ReviewBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailsBookController</servlet-name>
        <servlet-class>com.controller.DetailsBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RateBookController</servlet-name>
        <servlet-class>com.controller.RateBookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileController</servlet-name>
        <servlet-class>com.controller.UpdateProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBookController</servlet-name>
        <url-pattern>/SearchBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckBookCover</servlet-name>
        <url-pattern>/CheckBookCover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadBookController</servlet-name>
        <url-pattern>/UploadBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckBookExist</servlet-name>
        <url-pattern>/CheckBookExist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReviewBookController</servlet-name>
        <url-pattern>/ReviewBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailsBookController</servlet-name>
        <url-pattern>/DetailsBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RateBookController</servlet-name>
        <url-pattern>/RateBookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileController</servlet-name>
        <url-pattern>/UpdateProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
